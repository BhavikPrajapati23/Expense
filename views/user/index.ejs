<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense Manager | SignUp</title>

    <%- include('../layouts/css.ejs') -%> <%- include('../layouts/js1.ejs') -%>
  </head>
  <body>
    <div class="col-10 col-sm-12">
      <div class="card card-primary card-tabs">
        <div class="card-header p-0 pt-1">
          <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
            <li class="nav-item">
              <label class="mx-3 mt-2">Expense Manager</label>
            </li>
            <li class="nav-item ml-auto mr-1">
              <a
                class="nav-link active"
                id="custom-tabs-one-profile-tab"
                data-toggle="pill"
                href="#signup"
                role="tab"
                aria-controls="custom-tabs-one-profile"
                aria-selected="true"
                >SignUp</a
              >
            </li>
            <li class="nav-item mr-5">
              <a
                class="nav-link"
                id="custom-tabs-one-messages-tab"
                data-toggle="pill"
                href="#login"
                role="tab"
                aria-controls="custom-tabs-one-messages"
                aria-selected="false"
                >Login</a
              >
            </li>
          </ul>
        </div>
        <div class="card-body">
          <% if (message.length > 0) { %>
            <div class="alert alert-secondary alert-dismissible fade show" role="alert">
              <%= message %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% } %>
          <div class="tab-content" id="custom-tabs-one-tabContent">
            <div
              class="tab-pane fade active show"
              id="signup"
              role="tabpanel"
              aria-labelledby="custom-tabs-one-profile-tab"
            >
              <div
                class="container justify-content-center align-items-center"
                style="display: flex; height: 85vh"
              >
                <div class="card">
                  <h1 class="display-6 mb-2 mt-3 text-center"><b>SignUp</b></h1>
                  <hr />
                  <div class="card-body" style="width: 500px">
                    <form action="/signup" method="post">
                      <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input
                          type="email"
                          class="form-control"
                          name="email"
                          aria-describedby="emailHelp"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input
                          type="password"
                          class="form-control"
                          name="password"
                          aria-describedby="emailHelp"
                          required
                        />
                      </div>
                      <button type="submit" class="btn btn-outline-success">
                        Register
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>

            <div
              class="tab-pane fade"
              id="login"
              role="tabpanel"
              aria-labelledby="custom-tabs-one-messages-tab"
            >
              <div
                class="container justify-content-center align-items-center"
                style="display: flex; height: 85vh"
              >
              <div class="card">
                <h1 class="display-6 mb-2 mt-3 text-center"><b>Login</b></h1>
                <hr />
                <div class="card-body" style="width: 500px">
                    <form action="/login" method="post">
                      <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input
                          type="email"
                          class="form-control"
                          name="email"
                          aria-describedby="emailHelp"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input
                          type="password"
                          class="form-control"
                          name="password"
                          aria-describedby="emailHelp"
                          required
                        />
                      </div>
                      <button type="submit" class="btn btn-outline-success">
                        Login
                      </button>
                    </form>
                  </div>
              </div>
  
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../layouts/js.ejs') -%>
  </body>
</html>
